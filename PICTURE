//declarations

#include <chplot.h>
CPlot plot;

//background
plot.title("Kanye Bear");
plot.axisRange(PLOT_AXIS_X, 0, 20);
plot.axisRange(PLOT_AXIS_Y, 0, 10);
plot.fillColor("#FFA4A4");
plot.noStrokeColor();
plot.rectangle(0,0,20,10);

//left ear
plot.strokeColor("black");
plot.fillColor("#A26035");
plot.ellipse(6.42, 8.25, 2.5, 2.75, 10);
plot.strokeColor("black");
plot.fillColor("#FFB88A"); //light brown
plot.ellipse(6.45, 8.3, 1.3, 1.5, 45);

//right ear
plot.strokeColor("black");
plot.fillColor("#A26035");
plot.ellipse(13.5, 8.3, 2.5, 2.75, 10);
plot.strokeColor("black");
plot.fillColor("#FFB88A"); //light brown
plot.ellipse(13.5, 8.27, 1.3, 1.5, 152);

//head
plot.fillOpacity(1);
plot.fillColor("#A26035"); //head brown
plot.strokeColor("#76350B");
plot.circle(10, 5, 4.60); 
plot.strokeColor("black");
plot.circle(10, 5, 4.60);


//left eye
plot.strokeColor("black");
plot.fillColor("white");
plot.ellipse(8, 5.7, 1.80, 3, 350);
plot.fillColor("#FF56C4");
plot.ellipse(8.05, 5.9, 1.30, 2, 350);
plot.fillColor("white");
plot.ellipse(8.15, 5.4, 0.5, 0.7, 350);
plot.fillColor("#FFFE00");
plot.ellipse(8, 6.4, 0.45, 0.7, 350);
plot.fillColor("#00F9FF");
plot.ellipse(8.03, 5.8, 0.7, 0.8, 350);

//right eye
plot.strokeColor("black");
plot.fillColor("white");
plot.ellipse(12, 5.7, 1.80, 3, 10);
plot.fillColor("#0091FF");
plot.ellipse(11.95, 5.9, 1.25, 1.90, 10);
plot.fillColor("black");
plot.ellipse(11.95, 5.73, 1.15, 1.40, 10);
plot.fillColor("#F27BC6");
plot.ellipse(11.75, 6.3, 0.5, 0.7, 10);
plot.fillColor("#FAFC28");
plot.ellipse(12.2, 5.4, 0.4, 0.6, 10);
plot.fillColor("#F010A1");
plot.ellipse(11.95, 5.83, 0.68, 0.75, 10);

//mouth
plot.fillColor("#FFB88A");
plot.ellipse(10, 2.7, 3.5, 2.5, 0);
plot.fillColor("#4F2002");
plot.ellipse(10, 3.5, 0.8,0.6, 0);

plot.plotting();
